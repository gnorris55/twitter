<%= simple_form_for(@tweet) do |tweet| %>
  <%= tweet.error_notification %>
  <div class="field">
    <div class="control">
      <%= tweet.input :tweet, label: "tweet about it", input_html: {class: "textarea"}, wrapper: false,
          label_html: {class: "label"}, placeholder: "Compose a new tweet..." %>
    </div>
  </div>
  <%= tweet.button :submit, class: "button is-info" %>
<% end %>
